<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phone.PhoneActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empty Text Here"/>

    <Button
        android:id="@+id/send_system_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send System Call"/>

    <Button
        android:id="@+id/send_app_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send App Call"/>

    <Button
        android:id="@+id/send_system_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send System SMS"/>

    <Button
        android:id="@+id/send_app_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send App SMS"/>


</LinearLayout>